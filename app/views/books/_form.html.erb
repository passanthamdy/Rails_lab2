<%= form_with model: book do |form| %>
<div>
    <%= form.label :name %> <br>
    <%= form.text_field :name %> <br>
    <% book.errors.full_messages_for(:name).each  do |message| %>
    <div><%= message %></div>
    <% end %>
</div>
<div>
    <%= form.label :price %> <br>
    <%= form.text_field :price %> <br>
     <% book.errors.full_messages_for(:price).each  do |message| %>
    <div><%= message %></div>
    <% end %>
</div>
<div>
    <%= form.label :description %> <br>
    <%= form.text_field :description %> <br>
     <% book.errors.full_messages_for(:description).each  do |message| %>
    <div><%= message %></div>
    <% end %>
</div>
<div>
    <%# <%= collection_select(:book ,:admin_id , Admin.all , :id , :name , {prompt:true}) %> 
</div>
<%= form.file_field :image %>
<div>
    <%= form.submit "Save" %>
</div>
<div>
    <Button><%= link_to "Back", books_path  %></Button>
</div>
<% end%>